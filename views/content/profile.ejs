<div class="container down">
    <h1 style="font-weight:800;" class="mb-3">
      <i class="far fa-user"></i>
      <%- pageTitle %>
    </h1>
        <div class="card p-3 w-100">
          <div class="card-body p-3">
            <div class="mb-4 text-center">
              <img src="<%- user.avatarURL %>" alt="" width="200" class="img-fluid rounded-circle mb-3 img-thumbnail shadow-sm mx-auto d-block">
              <h1 class="card-title"><%- user.username %></h1>
            </div>
            
            <div class="mx-auto text-center">
                <button class="btn btn-primary" data-toggle="modal" data-target="#show_token"><i class="far fa-eye"></i> Your token</button>
                <a href="/profile/settings"><button class="btn btn-danger"><i class="far fa-cogs"></i> Settings</button></a>

                <div class="modal fade color" id="show_token" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                  aria-hidden="true" data-backdrop="static" data-keyboard="false" data-focus="true">
                  <div class="modal-dialog" role="document">
                      <!--Content-->
                      <div class="modal-content">
                          <!--Header-->
                          <div class="modal-header">
                              <h4 class="modal-title w-100" id="myModalLabel">Here is your token:</h4>
                          </div>
                          <!--Body-->
                          <div class="modal-body">
                            <%- token %>
                          </div>
                          <!--Footer-->
                          <div class="modal-footer">
                              </a><button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                          </div>
                      </div>
                  </div>
            </div>
            </div>
          </div>
        </div>
  </div>
