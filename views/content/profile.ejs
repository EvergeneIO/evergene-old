<div class="container down">
    <h1 style="font-weight:800;" class="mb-3">
      <i class="fas fa-user"></i>
      <%- pageTitle %>
    </h1>
        <div class="card p-3 w-100">
          <div class="card-body p-3">
            <div class="mb-4">
              <img src="<%- user.avatarURL %>" alt="" width="200" class="img-fluid rounded-circle mb-3 img-thumbnail shadow-sm">
              <span style="font-weight:800;font-size:2rem" class="card-title ml-3"><%- user.username %></span>
              <a href="/profile/settings"><button class="btn btn-danger float-vertical-align"><i class="fas fa-cogs"></i></button></a>
            </div>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            
            <div class="mx-auto">
                <h3>Your API Token:</h3><span class="bg-dark ml-2 p-1"><%- token %></span>
                
                <!--<a class="btn btn-danger" href="/token/reset">Reset Token</a>-->
                
            </div>
          </div>
        </div>
  </div>
